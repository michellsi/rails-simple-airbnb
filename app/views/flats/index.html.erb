

<div class="container mt-3">
<div class="row">
<div class="col-12">
<h2>All our flats (<%= @flats.all.count %>)</h2>
</div>
</div>
<div class="row">
<% @flats.each do |flat| %>
<div class="col">
  <div class="card h-100" style="width: 18rem;">
    <img src='<%= flat.picture_url %>' class="card-img-top" alt="House Picture">
      <div class="card-body">
        <h5 class="card-title"><strong><%= flat.name %></strong></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Address:</strong> <%= flat.address %></li>
        <li class="list-group-item"><i class="fa fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></li>
        <li class="list-group-item"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></li>
      </ul>
      <div class="card-body">
        <%= link_to "More info", flat, class: "btn btn-primary btn-sm"%>
        <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-primary btn-sm"%>
        <%= link_to "Remove", flat_path(flat), method: :delete,
        data: { confirm: "Are you sure you want to delete this flat?" },
        class: "btn btn-primary btn-sm"%>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>
