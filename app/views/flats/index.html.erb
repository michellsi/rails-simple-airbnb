

<div class="container mt-3">
<div class="row">
<div class="col-12">
<h2>All our flats (3)</h2>
</div>
</div>
<div class="row">
<% @flats.each do |flat| %>
<div class="col">
  <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><strong><%= flat.name %></strong></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Address:</strong> <%= flat.address %></li>
        <li class="list-group-item"><i class="fa fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></li>
        <li class="list-group-item"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></li>
      </ul>
      <div class="card-body">
        <a href="#" class="card-link"><%= link_to "More info", flat %></a>
        <a href="#" class="card-link"><%= link_to "Edit", edit_flat_path(flat) %></a>
      </div>
    </div>
  </div>
<% end %>
</div>
<%= link_to "Add flat", new_flat_path, class: "btn btn-primary mt-3"%>
</div>
